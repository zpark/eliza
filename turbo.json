{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "start": {
      "dependsOn": ["build"],
      "persistent": true
    },
    "dev": {
      "persistent": true,
      "dependsOn": ["^build"],
      "cache": false
    },
    "test": {
      "persistent": true,
      "dependsOn": ["build"]
    },
    "lint:fix": {
      "dependsOn": ["build"]
    },
    "swarm": {
      "dependsOn": ["build"]
    },
    "migrate": {
      "dependsOn": ["build"]
    },
    "migrate:generate": {
      "dependsOn": ["build"]
    }
  }
}
