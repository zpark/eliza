{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"extends": ["../../biome.json"],
	"organizeImports": {
		"enabled": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 4,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"files": {
		"ignore": ["dist/**/*", "extra/**/*", "node_modules/**/*"]
	}
}
