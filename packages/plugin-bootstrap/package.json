{
  "name": "@elizaos/plugin-bootstrap",
  "version": "1.0.6",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/elizaos-plugins/plugin-bootstrap"
  },
  "exports": {
    "./package.json": "./package.json",
