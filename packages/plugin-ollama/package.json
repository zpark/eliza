{
  "name": "@elizaos/plugin-ollama",
  "version": "1.0.0-beta.31",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/elizaos-plugins/plugin-ollama"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@ai-sdk/ui-utils": "1.1.9",
    "@elizaos/core": "^1.0.0-beta.31",
    "ai": "^4.1.25",
    "js-tiktoken": "^1.0.18",
    "ollama-ai-provider": "^1.2.0",
    "tsup": "8.4.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "prettier --write ./src",
    "clean": "rm -rf dist .turbo node_modules .turbo-tsconfig.json tsconfig.tsbuildinfo",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src"
  },
  "publishConfig": {
    "access": "public"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "OLLAMA_SMALL_MODEL": {
        "type": "string",
        "description": "The name of the small Ollama model to use"
      },
      "OLLAMA_LARGE_MODEL": {
        "type": "string",
        "description": "The name of the large Ollama model to use"
      },
      "OLLAMA_MEDIUM_MODEL": {
        "type": "string",
        "description": "The name of the medium Ollama model to use"
      },
      "OLLAMA_EMBEDDING_MODEL": {
        "type": "string",
        "description": "The name of the embedding Ollama model to use"
      },
      "OLLAMA_API_ENDPOINT": {
        "type": "string",
        "description": "The URL of the Ollama API"
      }
    }
  },
  "gitHead": "7b01ea21f51671371e738134c80c958483b7b709",
  "devDependencies": {
    "prettier": "3.5.3"
  }
}
